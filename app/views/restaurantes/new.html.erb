<%= render :partial => "titulo" %>
<h2>Adicionando Restaurante</h2>
<% if @restaurante.errors.any? %>
  <ul>
    <% @restaurante.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
  </ul>
<% end %>

<%= form_for :restaurante, :url => { :action => 'create' } do |f| %>
  <b>Nome: </b><%= f.text_field :nome %><br />
  <b>Endere&ccedil;o: </b><%= f.text_field :endereco %><br />
  <b>Especialidade: </b><%= f.text_field :especialidade %><br />
  <%= submit_tag 'Criar' %>
<% end %>  
  
<%= link_to 'Voltar', {:action => 'index'} %>